---
interface Props {
    title: string;
    description: string;
    image: string;
    tags: string[];
}

const { title, description, image, tags } = Astro.props;
---

<div class="project">
    <div class="project-image">
        <img src={image} alt={`Imagen del proyecto ${title}`}/>
    </div>
    <div class="project-content">
        <h4>{title}</h4>
        <p>{description}</p>
        <div class="project-tags">
            {tags.map(tag => <span class="tag">{tag}</span>)}
        </div>
    </div>
</div>

<style>
    .project {
  margin-bottom: 50px;
  display: flex;
  gap: 30px;
  padding: 20px;
  border-radius: 8px;
  transition: background 0.3s;
}

.project:hover {
  background: rgba(71, 85, 105, 0.1);
  
}


.project-image {
  width: 180px;
  height: 120px;
  flex-shrink: 0;
  border-radius: 4px;
  overflow: hidden;
  border: 1px solid #334155;
}

.project-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.project-content h4 {
  font-size: 1.1rem;
  margin-bottom: 10px;
  color: #e4e4e7;
}

.project-content p {
  color: #94a3b8;
  line-height: 1.6;
  margin-bottom: 15px;
  font-size: 0.9rem;
}

.project-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}

.tag {
  background: rgba(34, 211, 238, 0.1);
  color: #22d3ee;
  padding: 5px 12px;
  border-radius: 12px;
  font-size: 0.75rem;
  font-weight: 500;
}

</style>